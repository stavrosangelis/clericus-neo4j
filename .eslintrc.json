{
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "no-console": "off",
    "no-control-regex": 0,
    "prettier/prettier": [
      "error",
      { "singleQuote": true }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
   "commonjs": true,
   "node": true,
   "es6": true
 }
}
